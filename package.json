{
  "name": "snippettool",
  "version": "1.0.0",
  "description": "snippettool",
  "main": "main.ts",
  "scripts": {
    "start": "NODE_ENV=development electron-forge start",
    "package": "NODE_ENV=production electron-forge package",
    "make": "NODE_ENV=production electron-forge make",
    "build-css": "node-sass --include-path src/ src/main.scss src/main.css",
    "watch-css": "nodemon nodemon -e scss -x \"npm run build-css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Grewer/SnippetTool.git"
  },
  "keywords": [
    "buildElectron",
    "react",
    "electron"
  ],
  "author": "grewer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Grewer/SnippetTool/issues"
  },
  "homepage": "https://github.com/Grewer/SnippetTool#readme",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^10.12.1",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-hot-loader": "^4.1.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.2",
    "electron-prebuilt-compile": "3.0.6",
    "radium": "^0.25.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "codemirror": "^5.42.0",
    "electron": "^3.0.7",
    "electron-compile": "^6.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "fs": "0.0.1-security",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.7",
    "path": "^0.12.7",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-hot-loader": "^4.3.11",
    "react-markdown": "^4.0.4"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "snippettool"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "snippettool"
      }
    }
  }
}
